<%- include("partials/header.ejs") %>
<main>
  <div class="container">

    <div class="title">
      <p class="titleText"><%= title.charAt(0).toUpperCase() + title.slice(1) %></p>
    </div>

    <div class="box"> 
    
      <form class="item" action="/<%= title%>" method="POST">
        <input class="input-field" type="text" name="Task" placeholder="Add New Task" required/>
        <button class="round-button" type="submit">+</button>
      </form>

      <%if(locals.customList)
      {
        customList.tasks.forEach((task)=>
        {%>
          <form action="/deletecl/<%= title %>" method="POST">
            <div class="item">
              <input type="checkbox" name="checkbox" value="<%= task._id %>" onchange="this.form.submit()" class="myCheckbox custom-checkbox"/>
            <p class="strikeMe"><%=task.name %></p>
          </div>
          </form>
       <% })
      }%>

    </div>
    <p class="mt-3" style="text-align: center;">Mark a checkbox to delete a task or custom list</p>
  </div>
</main>
<%- include("partials/footer.ejs") %>